<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tdtf.weili">

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MONKEY" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainMenu" />
        <activity
            android:name=".activity.CleanOption"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.DetectOpt"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activity.PassOpt" />
        <activity android:name=".activity.DetectMenu" />
        <activity android:name=".activity.StartWork" />
        <activity
            android:name=".activity.Option"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.DataSearch"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.Search"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".activity.Login"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".activity.DataView" />
        <activity android:name=".activity.Calibration" />
        <activity
            android:name=".activity.CalibrationOpt"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.PassDefine"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.UserPower"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.Capacity" />
        <activity
            android:name=".activity.Corrected"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.Standard"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.Speed"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.Noise"
            android:windowSoftInputMode="stateHidden" />

        <service
            android:name=".service.MyService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>